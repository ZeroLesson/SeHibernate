package com.example.db.dao;

import java.util.ArrayList;

import org.hibernate.Session;
import org.hibernate.query.Query;

import com.example.db.model.Room;
import com.example.db.model.Roomstatus;

public class RoomStatusDAO {
	public ArrayList<Roomstatus> getAllRoom() {
		Session session = SessionUtil.getSession();
		Query<Roomstatus> query = session.createQuery("from Room");
		ArrayList<Room> rooms = (ArrayList<Room>) query.list();
		session.close();
		return rooms;
	}
}
