package com.example.db.dao;

import java.util.ArrayList;


import org.hibernate.Session;
import org.hibernate.query.Query;

import com.example.db.model.Reservation;

public class ReservationDAO {

	public ArrayList<Reservation> getAllReservation() {
		Session session = SessionUtil.getSession();
		Query query = session.createQuery("from Reservation");
		ArrayList<Reservation> reservations = (ArrayList<Reservation>) query.list();
		session.close();
		return reservations;
	}
	public Reservation getReservation() {
		Session session = SessionUtil.getSession();
		Query query = session.createQuery("from Reservation where reID = 2");
		Reservation reservations = (Reservation) query.uniqueResult();
		session.close();
		return reservations;
	}
}
